<h2>ログイン</h2>
<%= @user.account  %>
<%= @user.password  %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "id" %><br />
    <%= f.text_field :account, :value=>params[:id] ,autofocus: true , class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :value=>params[:pass], autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
